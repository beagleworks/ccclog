{
  "name": "ccclog",
  "type": "module",
  "version": "7.2.1",
  "scripts": {
    "dev": "astro dev",
    "preview": "astro preview",
    "build": "pnpm generate && pnpm generate:og && astro build",
    "build:ci": "pnpm generate:og && astro build",
    "generate": "pnpm generate:claude-code && pnpm generate:codex && pnpm generate:search-index",
    "generate:og": "tsx scripts/generate-og-image.ts",
    "generate:claude-code": "tsx scripts/generate-data.ts 2026 && tsx scripts/generate-data.ts 2025",
    "generate:codex": "tsx scripts/generate-codex-all-years.ts",
    "generate:search-index": "tsx scripts/generate-search-index.ts",
    "sync-versions": "tsx scripts/sync-versions.ts",
    "sync-codex-versions": "tsx scripts/sync-codex-versions.ts",
    "retranslate": "tsx scripts/retranslate.ts",
    "detect-upstream": "tsx scripts/detect-upstream-changes.ts",
    "sync-upstream": "tsx scripts/detect-upstream-changes.ts --apply",
    "test": "vitest run"
  },
  "dependencies": {
    "astro": "^5.16.16"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "jsdom": "^28.1.0",
    "sharp": "^0.33.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^4.0.18"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild"
    ]
  }
}
