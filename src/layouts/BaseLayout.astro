---
import { readdirSync } from 'node:fs';
import { join } from 'node:path';
import { products, type ProductId } from '../lib/products';

interface Props {
  title: string;
  description?: string;
  currentYear?: string;
  years?: string[];
  product?: ProductId;
}

const {
  title,
  description,
  currentYear = '2026',
  years: propsYears,
  product: productId = 'claude-code',
} = Astro.props;

const base = import.meta.env.BASE_URL;

// プロダクト設定を取得
const productConfig = products.find((p) => p.id === productId) || products[0];
const defaultDescription = `${productConfig.shortName} の変更履歴を日本語/英語で閲覧できます`;

// yearsが渡されなかった場合はcontent/[subdir]から自動検出
let years = propsYears;
if (!years) {
  const contentDir = productConfig.contentSubdir
    ? join(process.cwd(), 'content', productConfig.contentSubdir)
    : join(process.cwd(), 'content');

  try {
    const files = readdirSync(contentDir);
    years = files
      .filter((f) => /^CHANGELOG_(\d{4})_JA\.md$/.test(f))
      .map((f) => f.match(/^CHANGELOG_(\d{4})_JA\.md$/)![1])
      .sort()
      .reverse();
  } catch {
    years = [];
  }
}

// プロダクトごとのベースパス
const productBasePath = productConfig.basePath === '/' ? base : `${base}codex/`;

// 年ナビのURL生成
function getYearUrl(year: string): string {
  return productConfig.basePath === '/'
    ? `${base}${year}/`
    : `${base}codex/${year}/`;
}

// canonical URL を生成（空データ時は出力しない）
// トップページ（/、/codex/）と年別ページ（/{year}/）で同一コンテンツが表示されるため、
// 年明示URL（/{year}/）を正規URLとして指定し、SEO上の重複を回避する
const site = import.meta.env.SITE;      // https://beagleworks.github.io
const canonicalUrl = years.length > 0 && currentYear
  ? productConfig.basePath === '/'
    ? `${site}${base}${currentYear}/`
    : `${site}${base}codex/${currentYear}/`
  : null;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description || defaultDescription} />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}
    <title>{title}</title>
  </head>
  <body>
    <div class="container">
      <header>
        <!-- プロダクト切り替えナビ -->
        <nav class="product-nav">
          {products.map((p) => (
            <a
              href={p.basePath === '/' ? base : `${base}codex/`}
              class:list={['product-link', { active: productId === p.id }]}
            >
              {p.shortName}
            </a>
          ))}
        </nav>

        <h1>
          <a href={productBasePath}>{productConfig.name}</a>
        </h1>
        <p class="subtitle">日本語/英語 変更履歴</p>
        <p class="notice">{productConfig.releaseDateSourceNote}</p>

        {years.length > 0 && (
          <nav class="year-nav">
            {years.map((year) => (
              <a
                href={getYearUrl(year)}
                class:list={['year-link', { active: currentYear === year }]}
              >
                {year}
              </a>
            ))}
          </nav>
        )}
      </header>
      <main>
        <slot />
      </main>
      <footer>
        <div class="footer-content">
          <div class="footer-left">
            <p class="copyright">&copy; 2026 びーぐる(Beagle Works)</p>
            <a href="https://x.com/beagle_dog_inu" target="_blank" rel="noopener" aria-label="X (Twitter)">
              <svg viewBox="0 0 24 24" width="18" height="18" fill="currentColor">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
          <div class="footer-links">
            {productConfig.footerLinks.map((link) => (
              <a href={link.href} target="_blank" rel="noopener">
                {link.label}
              </a>
            ))}
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #0d1117;
    --color-bg-secondary: #161b22;
    --color-border: #30363d;
    --color-text: #e6edf3;
    --color-text-muted: #8b949e;
    --color-accent: #58a6ff;
    --color-accent-hover: #79b8ff;
    --color-added: #3fb950;
    --color-fixed: #f0883e;
    --color-changed: #a371f7;
    --color-improved: #79c0ff;
    --color-other: #8b949e;
    --font-mono: 'SF Mono', 'Fira Code', 'Consolas', monospace;
    --font-sans: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Noto Sans JP', sans-serif;
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  html {
    font-size: 16px;
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-sans);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    min-height: 100vh;
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
  }

  a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  code {
    font-family: var(--font-mono);
    background-color: var(--color-bg-secondary);
    padding: 0.15em 0.4em;
    border-radius: 4px;
    font-size: 0.9em;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  header {
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  /* プロダクト切り替えナビ */
  .product-nav {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .product-link {
    padding: 0.3rem 0.75rem;
    border-radius: 4px;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-text-muted);
    background-color: transparent;
    border: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .product-link:hover {
    color: var(--color-text);
    text-decoration: none;
  }

  .product-link.active {
    color: var(--color-accent);
    border-color: var(--color-accent);
  }

  header h1 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  header h1 a {
    color: var(--color-text);
  }

  header h1 a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  .subtitle {
    color: var(--color-text-muted);
    font-size: 1rem;
  }

  .notice {
    color: var(--color-text-muted);
    font-size: 0.8rem;
    margin-top: 0.25rem;
  }

  .year-nav {
    display: flex;
    justify-content: center;
    gap: 0.5rem;
    margin-top: 1rem;
  }

  .year-link {
    padding: 0.4rem 1rem;
    border-radius: 6px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text-muted);
    background-color: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    transition: all 0.2s ease;
  }

  .year-link:hover {
    color: var(--color-text);
    border-color: var(--color-accent);
    text-decoration: none;
  }

  .year-link.active {
    color: var(--color-text);
    background-color: var(--color-accent);
    border-color: var(--color-accent);
  }

  .year-link.active:hover {
    background-color: var(--color-accent-hover);
    border-color: var(--color-accent-hover);
  }

  footer {
    margin-top: 3rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-left {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-left a {
    color: var(--color-text-muted);
    display: flex;
    align-items: center;
  }

  .footer-left a:hover {
    color: var(--color-accent);
  }

  .footer-left svg {
    display: block;
  }

  .copyright {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin: 0;
  }

  .footer-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .footer-links a {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .footer-links a:hover {
    color: var(--color-accent);
  }

  .footer-links svg {
    display: block;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    header h1 {
      font-size: 1.5rem;
    }
  }
</style>
